RewriteEngine On

# Redirect all requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Security: Prevent access to sensitive files
<FilesMatch "\.(env|sql|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>
